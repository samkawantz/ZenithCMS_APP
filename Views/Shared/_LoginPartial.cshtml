@{
    var isAuthenticated = Context.Session.GetString("UserId") != null;
    var userName = Context.Session.GetString("UserName") ?? "User";
}

<ul class="navbar-nav ms-auto">
    @if (isAuthenticated)
    {
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button" data-mdb-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-user-circle fa-lg me-2"></i>
                    <span class="fw-bold">@userName</span>
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                    <li>
                        <a class="dropdown-item" href="@Url.Action("Profile", "Account")">
                            <i class="fas fa-user-cog me-2"></i> Manage Account
                        </a>
                    </li>
                    <li><hr class="dropdown-divider" /></li>
                    <li>
                        <form method="post" action="@Url.Action("Logout", "Account")">
                            <button type="submit" class="dropdown-item text-danger">
                                <i class="fas fa-sign-out-alt me-2"></i> Logout
                            </button>
                        </form>
                    </li>
                </ul>
            </li>
    }
    else
    {
            <li class="nav-item me-2">
                <a class="btn btn-outline-primary btn-rounded" href="@Url.Action("Register", "Account")">
                    <i class="fas fa-user-plus me-1"></i> Register
                </a>
            </li>
            <li class="nav-item">
                <a class="btn btn-primary btn-rounded" href="@Url.Action("Login", "Account")">
                    <i class="fas fa-sign-in-alt me-1"></i> Login
                </a>
            </li>
    }
</ul>
